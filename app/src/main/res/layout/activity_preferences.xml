<?xml version="1.0" encoding="utf-8"?><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--android:orientation="vertical"--><!--android:background="@drawable/gradientgreen"--><!--tools:context=".PreferencesActivity">-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientgreen"
    android:orientation="vertical"
    tools:context=".PreferencesActivity">

    <TextView
        android:id="@+id/prefTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="24sp"
        android:text="Preferences"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />


    <EditText
        android:id="@+id/prefET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prefTV"
        android:layout_margin="2sp"
        android:hint="Book Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/authorET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prefET"
        android:layout_margin="2sp"
        android:hint="Author"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/addBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/authorET"
        android:layout_margin="8sp"
        android:background="@drawable/edittext"
        android:text="Add" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/prefRV"
        android:layout_below="@id/addBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
